<Window x:Class="WeatherCSApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WeatherCSApp"
        mc:Ignorable="d"
        Title="Weather CS" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Actions">
                <MenuItem Header="Configuration" Click="ConfigurationMenuItemClick"/>
                <MenuItem Header="Forecast" Click="ForecastMenuItemClick"/>
            </MenuItem>
        </Menu>
        <ContentControl x:Name="CC"/>
    </DockPanel>
</Window>
